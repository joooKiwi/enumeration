{
  "name": "@joookiwi/enumerable",
  "version": "1.0.0",
  "description": "A Javascript implementation of an enum class",

  "scripts": {
    "compile": "npm-run-all --parallel compile-*",
    "compile-esm":   "tsc --project tsconfig.esm.json",
    "compile-cjs":   "tsc --project tsconfig.cjs.json",
    "compile-amd":   "tsc --project tsconfig.amd.json",
    "compile-types": "tsc --project tsconfig.types.json",

    "test": "jest"
  },

  "main": "src/index.js",
  "directories": {
    "example": "example",
    "lib": "dist/types",
    "test": "test"
  },
  "exports": {
    "./Enum": {
      "import": "./dist/ecmascript module/util/enumerable/Enum.js",
      "node": "./dist/common javascript/util/enumerable/Enum.js"
    },

    "./enumerable/*": {
      "import": "./dist/ecmascript module/util/enumerable/*.js",
      "node": "./dist/common javascript/util/enumerable/*.js"
    },
    "./collection/*": {
      "import": "./dist/ecmascript module/util/collection/*.js",
      "node": "./dist/common javascript/util/collection/*.js"
    },
    "./exception/*": {
      "import": "./dist/ecmascript module/util/enumerable/exception/*.js",
      "node": "./dist/common javascript/util/enumerable/exception/*.js"
    }
  },

  "repository": {
    "type": "git",
    "url": "git+https://github.com/joooKiwi/enumeration.git"
  },
  "bugs": {
    "url": "https://github.com/joooKiwi/enumeration/issues"
  },

  "keywords": [
    "enum",
    "enum class"
  ],
  "author": "JóôòKiwi",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "jest-environment-jsdom": "^29.2.1",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
